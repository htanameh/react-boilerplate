{
  "compilerOptions": {
    "jsx": "react",
    "esModuleInterop": true,
    "lib": ["es5", "es2015", "es2016", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "noUnusedLocals": true
  },
  "include": ["./src/**/**/*"]
}
